<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/checkin_bg_color"
              android:clickable="true"
              android:focusable="true"
              android:orientation="vertical">

    <TextView
        android:id="@+id/txtHeaderSelectlanguage"
        style="@style/TextAppearance.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:background="@drawable/white_bg_top_bottom_line_shape"
        android:gravity="left|center_vertical"
        android:padding="@dimen/margin_large"
        android:text="@string/selectlanguage"/>

    <EditText
        android:id="@+id/edt_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_margin="@dimen/margin_normal"
        android:background="@drawable/bg_corder_raduis"
        android:drawableLeft="@drawable/search_icon"
        android:drawablePadding="@dimen/margin_small"
        android:gravity="left|center_vertical"
        android:hint="@string/search_contact"
        android:imeOptions="actionDone"
        android:maxLength="25"/>

    <include layout="@layout/line"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:divider="@null"
        android:dividerHeight="0dp"
        android:fadeScrollbars="true"
        android:fastScrollEnabled="true"
        android:listSelector="@android:color/transparent">
    </ListView>

    <EditText
        android:id="@+id/edtOther"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:enabled="false"
        android:gravity="left|center_vertical"
        android:hint="@string/please_describe"
        android:imeOptions="actionDone"
        android:inputType="textCapWords"
        android:maxLength="25"
        android:paddingBottom="@dimen/margin_large"
        android:paddingLeft="@dimen/margin_largest"
        android:paddingTop="@dimen/margin_large"
        android:singleLine="true"
        android:visibility="gone"/>

</LinearLayout>